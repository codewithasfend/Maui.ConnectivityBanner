<?xml version="1.0" encoding="utf-8" ?>
<ContentView x:Name="ThisControl"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.ConnectivityBanner.Controls.ConnectivityView"
             IsClippedToBounds="True"
             HeightRequest="0"
             IsVisible="False">

    <Border x:Name="OfflineBorder"
            StrokeThickness="0"
            VerticalOptions="Start"
            HeightRequest="{Binding BannerHeight, Source={x:Reference ThisControl}}">

        <HorizontalStackLayout HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Spacing="12">

            <ActivityIndicator x:Name="ConnectingLoader"
                               IsRunning="True"
                               Color="White"
                               HeightRequest="20"
                               WidthRequest="20" />

            <Label x:Name="OfflineLabel"
                   TextColor="White"
                   FontAttributes="Bold"
                   VerticalOptions="Center" />

        </HorizontalStackLayout>
    </Border>

</ContentView>
